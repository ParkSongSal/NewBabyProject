<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    tools:context=".RegisterActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/register_marginTop"
        android:layout_marginLeft="@dimen/register_marginLeft"
        android:layout_marginRight="@dimen/register_marginRight"
        android:layout_marginBottom="@dimen/register_marginBottom"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view1"
            android:layout_width="match_parent"
            app:cardBackgroundColor="@color/mainColor"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/register_main_txt_mt"
                    android:text="회원가입"
                    android:textColor="@color/mainTextColor"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="아래 정보를 입력해주세요."
                    android:textColor="@color/mainTextColor"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/register_edit_1_mt"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"

                        android:layout_weight="1">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/userIdEdit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@color/mainTextColor"
                            android:hint="아이디를 입력해주세요"/>


                    </com.google.android.material.textfield.TextInputLayout>


                    <Button
                        android:id="@+id/valiBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginEnd="20dp"
                        android:onClick="onClick"
                        android:text="중복확인"
                        android:background="@drawable/ripple_ok_btn"
                        android:textColor="@color/mainTextColor"
                        android:textStyle="bold"
                        android:layout_marginRight="20dp" />

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="@dimen/register_edit_mt"
                    app:passwordToggleEnabled="true"
                    >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passwordEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="패스워드를 입력해주세요"
                    android:textSize="20sp"
                    android:inputType="textPassword"
                    android:layout_marginTop="10dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="@dimen/register_edit_mt"
                    app:passwordToggleEnabled="true"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/password2Edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="패스워드를 확인해주세요"
                        android:textSize="20sp"
                        android:inputType="textPassword"
                        android:layout_marginTop="10dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <EditText
                    android:id="@+id/nameEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/register_edit_mt"
                    android:layout_marginRight="15dp"
                    android:hint="보호자 이름을 입력해주세요"
                    android:inputType="text"
                    android:textSize="20sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="@dimen/register_edit_mt">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phoneEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="연락처를 입력해주세요"
                        android:maxLength="13"
                        android:textSize="20sp"
                        android:inputType="phone"/>
                </com.google.android.material.textfield.TextInputLayout>

                <EditText
                    android:id="@+id/babyNameEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/register_edit_mt"
                    android:layout_marginRight="15dp"
                    android:hint="아기 이름을 입력해주세요"
                    android:inputType="text"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/babyNumEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/register_edit_mt"
                    android:layout_marginRight="15dp"
                    android:hint="아기 등록번호를 입력해주세요"
                    android:inputType="number"
                    android:maxLength="13"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="※병원에서 안내받은 등록번호를 입력바랍니다"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/blackColor"
                    android:layout_marginLeft="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/register_edit_mt"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아기와의 관계"
                        android:textSize="18sp"
                        android:textColor="@color/mainTextColor"
                        android:paddingLeft="4dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"/>

                    <RadioGroup
                        android:id="@+id/babyRelationRadioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/dadRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="부" />

                    <RadioButton
                        android:id="@+id/momRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="모" />

                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/register_btn_mt"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/registerBtn"
                        android:text="가입하기"
                        android:background="@drawable/ripple_ok_btn"
                        android:textColor="@color/mainTextColor"
                        android:textStyle="bold"
                        android:layout_marginRight="20dp"
                        android:onClick="onClick"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="15dp" />

                    <Button
                        android:id="@+id/cancelBtn"
                        android:text="취소하기"
                        android:background="@drawable/ripple_cancel_btn"
                        android:textColor="@color/whiteColor"
                        android:onClick="onClick"
                        android:textStyle="bold"
                        android:layout_width="120dp"
                        android:layout_height="50dp"/>
                </LinearLayout>

           </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>