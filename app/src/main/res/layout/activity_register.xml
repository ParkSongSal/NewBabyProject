<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    tools:context=".RegisterActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view1"
            android:layout_width="match_parent"
            app:cardBackgroundColor="@color/mainColor"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:text="회원가입"
                    android:textColor="@color/mainTextColor"
                    android:textSize="35dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="아래 정보를 입력해주세요."
                    android:textColor="@color/mainTextColor"
                    android:textSize="16dp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/userIdEdit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:inputType="text"
                        android:hint="ID를 입력하세요"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/valiBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginEnd="20dp"
                        android:onClick="onClick"
                        android:text="중복확인"
                        android:background="@color/mainAccentColor"
                        android:textColor="@color/mainTextColor"
                        android:textStyle="bold"
                        android:layout_marginRight="20dp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/passwordEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:hint="비밀번호를 입력하세요"
                    android:inputType="textPassword"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/password2Edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:hint="비밀번호를 확인해주세요"
                    android:inputType="textPassword"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/nameEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:hint="이름을 입력해주세요"
                    android:inputType="text"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/phoneEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:hint="연락처를 입력해주세요"
                    android:inputType="phone"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/babyNumEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:hint="아기등록번호를 입력해주세요"
                    android:inputType="number"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="※병원에서 안내받은 등록번호를 입력바랍니다"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/blackColor"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아기와의 관계"
                        android:textSize="20sp"
                        android:textColor="@color/mainTextColor"
                        android:paddingLeft="4dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"/>

                    <RadioGroup
                        android:id="@+id/babyRelationRadioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/dadRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="부" />

                    <RadioButton
                        android:id="@+id/momRadio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="모" />

                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/registerBtn"
                        android:text="가입하기"
                        android:background="@color/mainAccentColor"
                        android:textColor="@color/mainTextColor"
                        android:textStyle="bold"
                        android:layout_marginRight="20dp"
                        android:onClick="onClick"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="15dp" />

                    <Button
                        android:id="@+id/cancelBtn"
                        android:text="취소하기"
                        android:background="@color/mainTextColor"
                        android:textColor="@color/whiteColor"
                        android:onClick="onClick"
                        android:textStyle="bold"
                        android:layout_width="120dp"
                        android:layout_height="50dp"/>
                </LinearLayout>

           </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>